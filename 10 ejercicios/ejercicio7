 def verificar_numero(numero,divisor):
    if numero % 2 == 0:
      print(F"{numero}es par.")
    else: 
       print(F"{numero} es impar.")

if numero % divisor == 0:
    print(F"{numero}es multiplo de {divisor}.")
else: 
    print(F"{numero} es multiplo de {divisor}.")